{
  "name": "start-ts-templates",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint-staged": "turbo lint-staged",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "npx cz",
    "release": "npx standard-version",
    "prepare": "husky",
    "preinstall": "npx -y only-allow pnpm"
